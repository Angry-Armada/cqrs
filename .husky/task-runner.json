{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
      {
         "name": "welcome-message-example",
         "command": "bash",
         "args": [
            "-c",
            "echo Husky.Net is awesome!"
         ],
         "windows": {
            "command": "cmd",
            "args": [
               "/c",
               "echo Husky.Net is awesome!"
            ]
         }
      },
      {
         "name": "dotnet-format",
         "command": "dotnet",
         "args": [
            "format",
            "--include",
            "--exclude",
            "${staged}"
         ],
         "include": [
            "**/*.cs",
            "**/*.vb"
         ],
         "exclude": [
            "**/*.Designer.cs"
         ]
      }
   ]
}